<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/isi_formulir">

    <TextView
        android:id="@+id/txtHari"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNoPendaftaran"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="84dp"
        android:layout_marginStart="61dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtJam"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtHari"
        android:layout_alignBottom="@+id/txtHari"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/txtHari"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMenit"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtJam"
        android:layout_alignBottom="@+id/txtJam"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/txtJam"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDetik"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtMenit"
        android:layout_alignBottom="@+id/txtMenit"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/txtMenit"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNoPendaftaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/border_textview"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:text="00000000000"
        android:textAlignment="center"
        android:textColor="@color/slider_3"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>