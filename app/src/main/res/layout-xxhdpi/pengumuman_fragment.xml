<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pengumuman">

    <TextView
        android:id="@+id/txtHari"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="229dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtJam"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtHari"
        android:layout_alignBottom="@+id/txtHari"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/txtHari"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMenit"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtJam"
        android:layout_alignBottom="@+id/txtJam"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/txtJam"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDetik"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtMenit"
        android:layout_alignBottom="@+id/txtMenit"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/txtMenit"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>