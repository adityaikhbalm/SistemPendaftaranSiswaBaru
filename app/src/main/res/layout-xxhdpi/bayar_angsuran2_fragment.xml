<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_angsuran"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/buktiPembayaran"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp"
        app:srcCompat="@drawable/no_image" />

    <Button
        android:id="@+id/btnPilih"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buktiPembayaran"
        android:layout_marginStart="92dp"
        android:layout_marginTop="43dp"
        android:background="@color/statusBar"
        android:text="Pilih"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/buktiPembayaran"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/btnPilih"
        android:background="@color/abu"
        android:text="Upload"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDetil"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/btnUpload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/slider_2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Detil Pembayaran"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>